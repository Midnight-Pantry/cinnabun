{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "ssr": ["./src/ssr/index.js"],
      "router": ["./src/router/index.js"],
      "signal": ["./src/signal.js"],
      "types": ["./src/types/ts"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.js", "src/types.ts"],
  "exclude": ["node_modules","./cypress/*", "cypress.config.js", "./src/tests/*", "dist"]
}
