{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "ssr": ["./dist/ssr/index.js"],
      "hydration": ["./dist/ssr/hydration.js"],
      "router": ["./dist/router/index.js"],
      "types": ["./src/types/index.ts"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ES6"
  },
  "include": ["src/**/*.js", "src/types.ts"],
  "exclude": ["node_modules","./cypress/*", "cypress.config.js", "./src/tests/*", "dist"]
}
